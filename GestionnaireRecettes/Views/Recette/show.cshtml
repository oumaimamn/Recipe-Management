@model Recette



<div class="container-md">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-4">@Model.Auteur.LastName @Model.Auteur.FirstName</div>
                    <h1 class="mb-3">@Model.Titre</h1>
                    <p class="mb-3">@Model.Description</p>
                    <div class="mb-3">
                        <div class="mb-2">
                            <span class="fw-bold mr-2">Temps Preparation</span>
                            <span>@Model.TempsPreparation minutes</span>
                        </div>
                        <div>
                            <span class="fw-bold mr-2">Temps Cuisson</span>
                            <span>@Model.TempsCuisson minutes</span>
                        </div>
                    </div>
                    <div class="text-secondary">@Model.DatePublication</div>
                </div>
                <div class="col-md-6">
                    <img src="@(!string.IsNullOrEmpty(@Model.Image) ? $"/recettes/{@Model.Image}" : "/images/default/default-image.jpg")" />
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">

                    <h3>Les ingrédient</h3>
                    <ul class="list-group">
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li class="list-group-item d-flex">
                                @ingredient.Nom -
                                <span>@ingredient.Quantite @ingredient.Unité</span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <h3>Les étapes</h3>
                    <ul class="list-group">
                        @foreach (var step in Model.Steps)
                        {
                            <li class="list-group-item">
                                <div class="badge bg-primary rounded-circle">@step.StepNumber</div>
                                <div class="my-2">
                                    @step.Description
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
</div>

