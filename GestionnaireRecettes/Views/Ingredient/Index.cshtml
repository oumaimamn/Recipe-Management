@using GestionnaireRecettes.Models.dto
@model IngredientDto


@{
}


<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2 class="text-center mb-3">Add Ingrédients</h2>
            <div class="card mb-4">
                    <div class="card-body">
                    <form asp-action="Create" asp-controller="Ingredient" method="post">
                        <input type="hidden" asp-for="RecetteId" value="@ViewBag.recetteId" />
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Nom</label>
                                <input type="text" asp-for="Nom" class="form-control" placeholder="enter nom">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Quantité</label>
                                <input type="number" asp-for="Quantite" class="form-control">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Unité</label>
                                <input type="text" asp-for="Unité" class="form-control">
                            </div>

                            <div class="col-md-4 mt-4">
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <ul class="list-group">

                        @foreach (var ingredient in (List<Ingredient>)ViewBag.Ingredients)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-10">
                                        @ingredient.Nom - 
                                        <span>@ingredient.Quantite <span class="text-secondary">@ingredient.Unité</span></span>
                                    </div>
                                    <div class="col-md-2">
                                        <form asp-action="Delete" method="post" onsubmit="return confirm(' Are you sure you want to delete this ingredient?')">
                                            @Html.AntiForgeryToken() <!-- CSRF protection -->

                                            <input type="hidden" name="id" value="@ingredient.Id" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>

                                
                      
                            </li>
                        }   

                    </ul>
                </div>
            </div>

            <a asp-controller="Step" asp-action="Index" asp-route-recetteId="@ViewBag.recetteId" class="btn btn-success">Suivant</a>
            <div class="my-5">
                <p class="text-center">Step 2 of 3</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 66.66%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="3"></div>
                </div>
            </div>
        </div>

    </div>

</div>
